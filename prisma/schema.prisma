generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String   @id @default(uuid()) @db.Uuid
  email    String   @unique
  role     Role     @default(STUDENT)
  isAdmin  Boolean  @default(false)
  updatedAt DateTime @updatedAt

  student   Student?
  company   Company?
  interests Interest[]
}

model Student {
  id       String   @id @db.Uuid
  user     User     @relation(fields: [id], references: [id], onDelete: Cascade)

  code     String   @unique
  name     String
  bio      String?
  year     String
  cv       String?
  linkedin String?
  github   String?
  avatar   String?
  updatedAt DateTime @updatedAt

  actionCompletions ActionCompletion[]
  savedByCompanies  SavedStudent[]

  @@index([code])
}

model Company {
  id       String   @id @db.Uuid
  user     User     @relation(fields: [id], references: [id], onDelete: Cascade)

  name     String   @unique
  tier     Tier
  avatar   String?
  updatedAt DateTime @updatedAt

  savedStudents SavedStudent[]

  @@index([name])
}

model Action {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  points      Int
  altText     String?
  isLive      Boolean  @default(false)
  isVisible   Boolean  @default(true)
  updatedAt   DateTime @updatedAt

  actionCompletions ActionCompletion[]
}

model ActionCompletion {
  id          String   @id @default(uuid())
  completedAt DateTime @default(now())

  action       Action   @relation(fields: [actionId], references: [id])
  student      Student  @relation(fields: [studentId], references: [id])

  actionId     String
  studentId    String   @db.Uuid

  @@unique([actionId, studentId])
}

model Interest {
  id     String  @id @default(uuid()) @db.Uuid
  name   String  @unique

  users  User[]
}

model SavedStudent {
  studentId String   @db.Uuid
  companyId String   @db.Uuid
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  savedBy   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([studentId, companyId])
}

enum Role {
  STUDENT
  COMPANY
}

enum Tier {
  DIAMOND
  GOLD
  SILVER
  BRONZE
}
